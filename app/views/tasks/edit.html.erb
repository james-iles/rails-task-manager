<div class="container">
  <h1> Edit Task </h1>
<%= form_with model: @task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="form-check mb-3">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, "Completed?", class: "form-check-label" %>
  </div>

  <%= f.submit "Save Task", class: "btn btn-primary" %>
  <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary ms-2" %>
<% end %>
</div>
